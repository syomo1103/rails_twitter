<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        @<%= @tweet.handle %> at <%= @tweet.created_at.localtime.strftime("%H:%M%P") %> on <%= @tweet.created_at.strftime("%b %d, %Y") %>
      </h4>
    </div>
    <div class="panel-body lead">
      <p><%= @tweet.content %></p>
    </div>
  </div>
  <%= link_to "Edit", edit_tweet_path(@tweet) %>
  <%= link_to "Delete", tweet_path, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"} %>
</div>
